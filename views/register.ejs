						<li class="nav-item">
							<a class="nav-link" href="#" style="color: azure;">CONTACT</a>
						</li>
					</ul>
				</nav>
			</div>
        </div>
    </div>




<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h3 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> List Of Appointments
        </h3>

        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="phone">Phone Number</label>
            <input
              type="phone"
              id="phone"
              name="phone"
              class="form-control"
              placeholder="Enter Phone Number"
              value="<%= typeof phone != 'undefined' ? phone : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="date">Date</label>
            <input
              type="date"
              id="date"
              name="date"
              class="form-control"
              placeholder="Add a date "
              value="<%= typeof date != 'undefined' ? date : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="hour">Hour</label>
            <input
              type="hour"
              id="hour"
              name="hour"
              class="form-control"
              placeholder="Add an hour "
              value="<%= typeof hour != 'undefined' ? hour : '' %>"
            />
          </div>
         
          <button type="submit" class="btn btn-primary btn-block">
            Confirm
          </button>
        </form>
      
      </div>
    </div>
  </div>
  </body>
  </html>
  