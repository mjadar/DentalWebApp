<body style="background-color: rgb(68, 67, 67);">
<div style="margin-top: 15%;">
    <div class="col-md-6 m-auto">
      <div class="card card-body" style="color: #c78531;">
        <h3 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h3>

        <form action="/users/login" method="POST" >
          <div class="form-group" >
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-block" style="background-color: #c78531;color:white">Login</button>
        </form>
        <p class="lead mt-4">
          You want to make an appointment ? <a href="/">Here</a>
        </p>
      </div>
    </div>
  </div>

</body>
